mixin dropdown_bedroom(title)
    .dropdown_bedroom
        .dropdown_bedroom__span
            span= title
        .dropdown_bedroom__input
            .dropdown_bedroom__input_svg#test
                <svg width="13" class="dropdown_bedroom__input_svgg" onclick='func(this);' height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M11.3301 0.578125L12.7363 1.98438L6.73633 7.98438L0.736328 1.98438L2.14258 0.578125L6.73633 5.17188L11.3301 0.578125Z" fill="#1F2041" fill-opacity="0.5"/>
                </svg>
            input(type="text" placeholder="Выбор номера")
        .dropdown_bedroom_content#test1
            .dropdown_content__human
                span спальни
                span кровати
                span ванные комнаты
                span(class='clear') очистить
            .dropdown_content__human_amount
                .dropdown_content__human_amount_1
                    .dropdown_content__human_amount_minus - 
                    span 0
                    .dropdown_content__human_amount_plus +
                .dropdown_content__human_amount_1
                    .dropdown_content__human_amount_minus - 
                    span 0
                    .dropdown_content__human_amount_plus +
                .dropdown_content__human_amount_1
                    .dropdown_content__human_amount_minus - 
                    span 0
                    .dropdown_content__human_amount_plus +
                span(class='confirm') применить 